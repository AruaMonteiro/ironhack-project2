<div class="container-fluid">
  <div class="row">
    {{> profileLeftMenu this}} 
    
    <div class="col-10">
      <div class="container col-4">
        <form action="/profile" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label>Nome</label>
            <input type="text" name="name" value="{{this.name}}" class="form-control">
          </div>
          
          <div class="form-group">
            <label>Email</label>
            <input type="email" name="email" value="{{this.email}}" class="form-control">
          </div>
          

          <div class="form-group">
            <label>Região</label>
            <input type="text" name="region" value="{{this.region}}" class="form-control">
          </div>
          

          <div class="form-group">
            <label>Site</label>
            <input type="text" name="site" value="{{this.site}}" class="form-control">
          </div>
          

          <div class="form-group">
            <label>Telefone</label>
            <input type="text" name="phone" value="{{this.phone}}" class="form-control">
          </div>
          

          <div class="form-group">
            <label>Categoria</label>
            <input type="text" name="category" value="{{this.category}}" class="form-control">
          </div>
          

          <div class="form-group">
            <label>Descrição</label>
            <textarea name="description" rows="3" cols="20" class="form-control">{{this.description}}</textarea>
          </div>
          

          <div class="form-group">
            <label>Imagem</label>
            <input type="file" class="form-control-file" name="imageUrl">
            <input type="text" name="existingImage" hidden value="{{this.image}}">
          </div>
          

          <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
      </div>
      
    </div>
  </div>
  
</div>